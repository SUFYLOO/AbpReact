{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env", "NEXT_PUBLIC_API_BASE_URL", "NEXTAUTH_SECRET"],
  "globalEnv": [
    "NEXT_PUBLIC_API_BASE_URL",
    "NEXTAUTH_SECRET"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_API_BASE_URL", "NEXTAUTH_SECRET"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {},
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
